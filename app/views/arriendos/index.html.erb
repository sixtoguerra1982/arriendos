<h1>Arriendos</h1>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>Cliente</th>
        <th>Titulo</th>
        <th class="text-center">Serie</th>
        <th class="text-center">Pelicula</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @arriendos.each do |arriendo| %>
        <tr>
          <td><%= arriendo.id %></td>
          <td><%= arriendo.usuario.name %>&nbsp;<%= arriendo.usuario.email %></td>
          <% if arriendo.pelicula_id.blank? %>
            <td><%= arriendo.serie.titulo %></td>
          <% else %>
            <td><%= arriendo.pelicula.titulo %></td>
          <% end %>
          <% if arriendo.serie_id.blank? %>
            <td>&nbsp;</td>
            <td class="text-center">
              <span class="badge badge-info">X</span>
            </td>
          <% else %>
            <td class="text-center">
              <span class="badge badge-info">X</span>
            </td>
            <td>&nbsp;</td>
          <% end %>
          <td><%= link_to 'Show', arriendo, class: "btn btn-info" %></td>
          <td><%= link_to 'Edit', edit_arriendo_path(arriendo), class: "btn btn-warning" %></td>
          <td><%= link_to 'Destroy', arriendo, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'Back', :back %>