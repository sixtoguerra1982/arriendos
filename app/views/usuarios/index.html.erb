<h1>Clientes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.name %></td>
        <td><%= usuario.email %></td>
        <td><%= link_to 'Show', usuario, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_usuario_path(usuario), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', usuario, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cliente', new_usuario_path, class: "btn btn-primary" %>
