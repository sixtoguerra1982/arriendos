<ul class="list-group">
  <li class="list-group-item">
    
      <strong>Name:</strong>
      <%= @usuario.name %>
    
  </li>
  <li class="list-group-item">
    
      <strong>Email:</strong>
      <%= @usuario.email %>
    
  </li>
</ul>

<h1>Arriendos</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arriendos.each do |arriendo| %>
      <tr>
      	<% if ! arriendo.pelicula.blank? %>
        	<td><%= arriendo.pelicula.titulo %></td>
        <% else %>
        	<td><%= arriendo.serie.titulo %></td>
        <% end %>
     	<td><%= arriendo.created_at %></td>
        <td><%= link_to 'Show', arriendo_path(arriendo), class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_arriendo_path(arriendo) , class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', arriendo, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_usuario_path(@usuario) %> |
